/**
 * Request options for additional headers
 */
export type RequestOptions = {
	headers?: Record<string, string>;
};

/**
 * Request method
 * @param config The OpenAPI configuration object
 * @param options The request options from the service
 * @param overrides The request options for additional headers
 * @returns CancelablePromise<{{#equals @root.$config.services.response 'response'}}ApiResult<T>{{else}}T{{/equals}}>
 * @throws ApiError
 */
export const request = <T>(config: OpenAPIConfig, options: ApiRequestOptions, overrides?: RequestOptions | undefined): CancelablePromise<{{#equals @root.$config.services.response 'response'}}ApiResult<T>{{else}}T{{/equals}}> => {
	return new CancelablePromise(async (resolve, reject, onCancel) => {
		try {
			const url = getUrl(config, options);
			const formData = getFormData(options);
			const body = getRequestBody(options);
			const headers = await getHeaders(config, options);

			const mergedHeaders = { ...headers, ...overrides?.headers };

			if (!onCancel.isCancelled) {
				let response = await sendRequest(config, options, url, body, formData, mergedHeaders, onCancel);

				for (const fn of config.interceptors.response._fns) {
					response = await fn(response);
				}

				const responseBody = await getResponseBody(response);
				const responseHeader = getResponseHeader(response, options.responseHeader);

				const result: ApiResult = {
					url,
					ok: response.ok,
					status: response.status,
					statusText: response.statusText,
					body: responseHeader ?? responseBody,
				};

				catchErrorCodes(options, result);

				resolve({{#equals @root.$config.services.response 'body'}}result.body{{else}}result{{/equals}});
			}
		} catch (error) {
			reject(error);
		}
	});
};
